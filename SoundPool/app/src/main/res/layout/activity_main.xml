<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:id="@+id/kickDrum1ImageButton"
        android:background="@drawable/drums"
        android:onClick="playKick"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/snareImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:id="@+id/kickDrum2ImageButton"
        android:background="@drawable/drums"
        android:onClick="playKick"
        android:layout_alignTop="@+id/kickDrum1ImageButton"
        android:layout_alignLeft="@+id/snareImageButton"
        android:layout_alignStart="@+id/snareImageButton" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/snareImageButton"
        android:background="@drawable/snare"
        android:onClick="playSnare"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/crashImageButton"
        android:background="@drawable/hihhat"
        android:onClick="playHiHat"
        android:layout_above="@+id/kickDrum1ImageButton"
        android:layout_alignRight="@+id/kickDrum1ImageButton"
        android:layout_alignEnd="@+id/kickDrum1ImageButton" />
</RelativeLayout>
